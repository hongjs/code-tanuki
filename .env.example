# Application
NODE_ENV=development
PORT=3000

# GitHub API
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_API_BASE_URL=https://api.github.com

# Jira API
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your_jira_api_token

# Claude API (At least one AI provider required)
ANTHROPIC_API_KEY=sk-ant-your-api-key
CLAUDE_MAX_TOKENS=8192
CLAUDE_MODEL_DEFAULT=claude-haiku-4-5-20251001
CLAUDE_TEMPERATURE=0.3

# Gemini API (Optional - Alternative AI provider)
# Get your free API key from https://aistudio.google.com/app/apikey
# Note: Free tier works best with GEMINI_MAX_TOKENS=8192 or lower
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MAX_TOKENS=8192
GEMINI_MODEL_DEFAULT=gemini-2.0-flash
GEMINI_TEMPERATURE=0.3

# Storage
STORAGE_TYPE=json
DATA_DIR=./data/reviews

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY_MS=1000
RETRY_MAX_DELAY_MS=10000

# Duplicate Prevention
DUPLICATE_CHECK_MINUTES=5
